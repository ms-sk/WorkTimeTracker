<UserControl
    x:Class="WorkTimeTracker.UI.WorkTimeTrackerToolbar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WorkTimeTracker.ViewModels"
    d:DataContext="{d:DesignInstance {x:Type viewmodels:MainViewModel}}"
    mc:Ignorable="d">
    <ToolBarTray Background="LightGray">
        <ToolBar>
            <ContentPresenter Margin="0,0,5,0" Content="{Binding ToolbarViewModel.Sum}" />
            <ComboBox
                x:Name="FilterComboBox"
                Width="200"
                Margin="5,0,0,0"
                DisplayMemberPath="DisplayText"
                ItemsSource="{Binding MasterViewModel.Filters, Mode=OneWay}"
                SelectedItem="{Binding MasterViewModel.SelectedFilter, Mode=TwoWay}" />
            <Separator />
            <Button Content="Save" />
            <Separator />
            <Separator />
            <Button Content="Settings" />
        </ToolBar>
    </ToolBarTray>
</UserControl>
