<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WorkTimeTracker.ViewModels">
    <DataTemplate DataType="{x:Type local:SumViewModel}">
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="5,0,5,0"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="{Binding DisplayText, Mode=OneWay}" />
            <ContentPresenter VerticalAlignment="Center" Content="{StaticResource Time}" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>