<UserControl
    x:Class="WorkTimeTracker.UI.ToolbarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WorkTimeTracker.ViewModels"
    d:DataContext="{d:DesignInstance {x:Type viewmodels:MainViewModel}}"
    mc:Ignorable="d">
    <ToolBarTray Background="DarkGray">
        <ToolBar>
            <ContentPresenter Margin="{StaticResource Right}" Content="{Binding ToolbarViewModel.Sum}" />
            <ComboBox
                x:Name="FilterComboBox"
                Width="200"
                Margin="{StaticResource Left}"
                DisplayMemberPath="DisplayText"
                ItemsSource="{Binding MasterViewModel.Filters, Mode=OneWay}"
                SelectedItem="{Binding MasterViewModel.SelectedFilter, Mode=TwoWay}" />
            <Separator />
            <Button
                Command="{Binding ToolbarViewModel.Save}"
                CommandParameter="{Binding MasterViewModel.SelectedDay}"
                Content="{StaticResource Save}" />
            <Button CommandParameter="{Binding MasterViewModel.WorkTimes}" Content="{StaticResource SaveAll}" />
            <Separator />
            <Button Content="{StaticResource Settings}" />
        </ToolBar>
    </ToolBarTray>
</UserControl>
