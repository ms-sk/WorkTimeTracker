<UserControl
    x:Class="WorkTimeTracker.UI.DetailsUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:WorkTimeTracker.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.Style>
            <Style TargetType="Grid">
                <Setter Property="Visibility" Value="Visible" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding DetailsViewModel.SelectedDay}" Value="{x:Null}">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Grid.Style>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="General">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5,5,0,3"
                    Content="Start: " />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5,5,5,3"
                    VerticalAlignment="Center"
                    Text="{Binding DetailsViewModel.SelectedDay.StartTime}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5,2,0,3"
                    Content="End: " />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5,2,5,3"
                    VerticalAlignment="Center"
                    Text="{Binding DetailsViewModel.SelectedDay.EndTime}" />

                <Label
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="5,5,0,3"
                    Content="Work Time: " />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="5,5,5,3"
                    VerticalAlignment="Center"
                    Text="{Binding DetailsViewModel.SelectedDay.WorkTime}" />

                <Label
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5,2,0,3"
                    Content="Break: " />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="3"
                    Margin="5,2,5,3"
                    VerticalAlignment="Center"
                    Text="{Binding DetailsViewModel.SelectedDay.Break}" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>