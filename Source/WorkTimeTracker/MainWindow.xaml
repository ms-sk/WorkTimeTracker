<Window
    x:Class="WorkTimeTracker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WorkTimeTracker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:WorkTimeTracker.UI"
    xmlns:viewModels="clr-namespace:WorkTimeTracker.ViewModels"
    Title="Worktime Tracker"
    Width="800"
    Height="500"
    d:DataContext="{d:DesignInstance {x:Type viewModels:MainViewModel}}"
    ResizeMode="CanResizeWithGrip"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ui:MasterUserControl Grid.Column="0" />

        <ui:DetailsUserControl Grid.Column="1" />

        <!--<ContentPresenter
            Grid.Row="2"
            Grid.Column="1"
            Content="{Binding Sum, Mode=OneWay}" />-->
    </Grid>
</Window>
