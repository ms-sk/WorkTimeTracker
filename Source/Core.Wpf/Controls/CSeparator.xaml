<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Core.Wpf.Controls">
    <Style TargetType="{x:Type local:CSeparator}">
        <Style.Setters>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="local:CSeparator">
                        <Border
                            Margin="{StaticResource LeftRight}"
                            VerticalAlignment="Stretch"
                            BorderBrush="{StaticResource Dark}"
                            BorderThickness="1,0,0,0" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>